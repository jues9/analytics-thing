{
	"compilerOptions": {
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"rootDir": "src",
		"declaration": true,
		"types": ["bun-types", "./types.d.ts"]
	},
	"include": ["src"],
}
